<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color"
    android:orientation="vertical"
    tools:context=".activities.DownloadTemplateActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/app_background_color"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_10sdp">

        <ImageView
            android:id="@+id/downloadTempBack"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@android:color/transparent"
            android:src="@drawable/back_icon"
            app:tint="@color/white" />


        <com.example.boozzapp.controls.CTextView
            android:id="@+id/tvHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/bg_rounded_white"
            android:paddingHorizontal="@dimen/_7sdp"
            android:paddingVertical="@dimen/_3sdp"
            android:text="@string/home"
            android:textColor="@color/blue_text"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />


    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llMain"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_12sdp">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_220sdp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="start">

                    <ProgressBar
                        android:id="@+id/progressLoaders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                    <com.google.android.exoplayer2.ui.PlayerView
                        android:id="@+id/exoDownloadPlayerView"
                        android:layout_width="@dimen/_220sdp"
                        android:layout_height="@dimen/_220sdp"
                        android:padding="0dp"
                        android:layout_margin="0dp"
                        app:resize_mode="fit" />

                    <ImageView
                        android:id="@+id/pauseButtons"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/exo_icon_play"
                        android:visibility="gone" />
                </FrameLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_220sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@drawable/bg_rounded_blue"
                    android:orientation="vertical"
                    android:padding="@dimen/_12sdp">

                    <ImageView
                        android:id="@+id/ivDownloadWtsApp"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_weight="1"
                        android:src="@drawable/whatsapp_white_icon" />


                    <ImageView
                        android:id="@+id/ivDownloadInsta"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_weight="1"
                        android:src="@drawable/insta_white_icon" />

                    <ImageView
                        android:id="@+id/ivDownloadFB"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_weight="1"
                        android:src="@drawable/fb_white_icon" />

                    <ImageView
                        android:id="@+id/ivDownloadShare"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_weight="1"
                        android:src="@drawable/share_white_icon" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDownloadVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/row_explore_quote_list" />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>